


{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Medicsyn App",
        "description": "medical adherence app"
    },
    "server":[
        {
            "url":"http://localhost:3000",
            "description":"Developemt server"
        },
        {
            "url":"http://localhost:5500",
            "description":"Client server"
        }
    ],

    "paths":{
        "/api/v1/users/":{
            "post":{
                "summary":"signup",
                "tags":["SignupRoute"],
                "requestBody":{
                    "description":"Create an account to have full access",
                    "required": true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string",
                                        "required": true, 
                                        "required_error":"name is required",
                                        "example":"John Doe"
                                    },

                                    "password":{
                                        "type":"string",
                                        "required": true, 
                                        "required_error":"password is required",
                                        "minLength":[8, "password should be at least 8 characters"],
                                        "example":"johnDoe123_#"
                                    },

                                    "email":{
                                        "type":"string",
                                        "required": true,
                                        "required_error":"Email is required",
                                        "example":"jojndoe@gmail.com"
                                    },

                                    "timeZone":{
                                        "type":"string",
                                        "required":true,
                                        "required_error":"Time zone is required",
                                        "example":"West Africa time"
                                    },

                                    "phoneNumber":{
                                        "type":"string",
                                        "example": "07080472950",
                                        "optional": true
                                    },


                                    "condition":{
                                        "type": "string",
                                        "optional": true,
                                        "example": "Fever"
                                    }


                                }
                            }
                        }
                    }
                },

                "responses":{
                    "201":{
                        "description": "User succssully created"
                    },
                    "400":{
                        "description":"Bad request"
                    },
                    "500":{
                        "description":"server error"
                    }
                }
            },

            "get":{
                "summary":"view all registered users",
                "tags":["getUsersRoute"],
                "description": "View all the successful registered users",
                "responses":{
                    "200":{
                        "description":"Success"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description":"Not found"
                    },
                    "500":{
                        "description":"server error"
                    }
                }
            }
        },

        "/api/v1/auth/login":{
            "post":{
                "summary":"Login",
                "tags":["loginRoute"],
                "requestBody":{
                    "description":"this route is for login only",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "password":{
                                        "type":"string",
                                        "required":true,
                                        "required_error":"password is required"
                                    },

                                    "email":{
                                        "type":"string",
                                        "required":true,
                                        "required_error":"Email is required"
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"Login successful"
                    },

                    "400":{
                        "description":"Inavlid email or password"
                    },

                    "404":{
                        "description":"User not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            }
        },

        "/api/v1/auth/refresh-token":{
            "post":{
                "summary":"This route is used for refresh token",
                "tags":["refreshTokenRoute"],
                "requestBody":{
                    "description":"This endpoint allows you to refresh your access token.",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "refreshToken":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                },
                
                "responses":{
                    "200":{
                        "description":"Access token refreshed"
                    },
                    "400":{
                        "description":"Refresh token is required"
                    },
                    "401":{
                        "description":"Invalid refresh token"
                    },
                    "404":{
                        "description":"User with this email is not exist"
                    }
                }
            }
        },


        "/api/v1/auth/forgot-password":{
            "post":{
                "summary":"Forgot password route",
                "tags":["forgotPasswordRoute"],
                "requestBody":{
                    "description":"This route is used to generate another password",
                    "required": true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "email":{
                                        "type":"string",
                                        "required":true
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"success"
                    },
                    "400":{
                        "description":"Email is reuired"
                    },

                    "404":{
                        "description":"User not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            }
        },


        "/api/v1/auth/reset-password":{
            "post":{
                "summary":"reset password route",
                "tags":["resetPasswordRoute"],
                "requestBody":{
                    "description":"This route is for reset password only",
                    "required": true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "token":{
                                        "type":"string",
                                        "required":true,
                                        "required_error":"token is rquired"
                                    },
                                   "newPassword":{
                                    "type":"string",
                                    "required":true,
                                    "minLength": 8,
                                    "required_error":"New password is required"
                                   } 
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"Password reset successful"
                    },

                    "400":{
                        "description":"Invalid or expired token"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            }
        },

        "/api/v1/users/{userId}":{
            "get":{
                "summary":"Retrieve use by ID",
                "tags":["retrieveUserById"],
                "description":"This route is for retrirving a single user by ID",
                "produces":[ "application/json"],
             
                "parameters": [
                    {
                      "name": "userId",
                      "in": "path",
                      "required": true,
                      "type":"string",
                      "description": "The unique identifier of the user."

                    }
                ],

                "responses":{
                    "200":{
                        "description":"Success"
                    },

                    "400":{
                        "description":"Bad Request"
                    },
                    "401":{
                        "description":"Access token required"
                    },

                    "404":{
                        "description":"User not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                    
                }
            }
        },

       

        "/api/v1/users/profile":{
            "patch":{
                "summary":"Update user profile",
                "tags":["updateProfieRoute"],
                "requestBody":{
                    "description":"This route is for updating the user profile",
                    "required": true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "phoneNumber":{
                                        "type":"string",
                                        "required":true,
                                        "maxLength":[11, "Phone number should not be greater than 11"],
                                        "example":"07080472950"
                                    },

                                    "condition":{
                                        "type":"string",
                                        "optional":true,
                                        "example":"Fever"
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"Success"
                    },

                    "400":{
                        "description":"Old password is incorrect"
                    },

                    "404":{
                        "description":"Not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            }
        },

        "/api/v1/users/change-password":{
            "patch":{
                "summary":"change password",
                "tags":["changePasswordRoute"],
                "requestBody":{
                    "description":"this route is used for password reset only",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "oldPassword":{
                                        "type":"string",
                                        "required":true,
                                        "required_error": "Old password is required",
                                        "example":"johnDoe123_#"
                                    },

                                    "newPassword":{
                                        "type":"string",
                                        "required": true,
                                        "required_error":"New password is required",
                                        "minLength":[8, "New password should be at least 8 characters"],
                                        "example":"johnDoe12_#"
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"Success"
                    },

                    "400":{
                        "description":"Old password not correct"
                    },

                    "401":{
                        "description":"Access token required"
                    },

                    "404":{
                        "description":"User not found"
                    },
                    "500":{
                        "description": "server error"
                    }
                }
            }
        },


        "/api/v1/users/upload-profile-image": {
            "patch": {
              "summary":"upload profile picture",
              "tags":["uploadProfilePictureRoute"],
              "description":"This route is used for profile picture upload only",
              "requestBody": {
                "content": {
                  "multipart/form-data": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "file": {
                            "type": "string",
                            "format": "binary"
                          
                        }
                      },
                      "required": ["file"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Files uploaded successfully"
                },
                "400": {
                  "description": "Bad Request"
                },
                "401":{
                    "description":"Access token required"
                },
                "500": {
                  "description": "Server Error"
      
                }
              }
            }
          },


          "/api/v1/auth/email/request-verification":{
            "post":{
                "summary":"Route to request for email verification",
                "tags":["emailVerificationRoute"],
                "requestBody":{
                    "description":"This route is use for email verification only.",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "email":{
                                        "type":"string",
                                        "required":true,
                                        "required_error":"Email is required"
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"success"
                    },

                    "400":{
                        "description":"verification token is required "
                    },

                    "401":{
                        "description":"Invalid or expired token"
                    },

                    "404":{
                        "description":"User with this email does not exist"
                    }
                }
            }
        },



        "/api/v1/medications/":{
            "post":{
                "summary":"This route is used to create a medication",
                "tags":["createMedicationRoute"],
                "requestBody":{
                    "description":"this route is used to create a medications, days Interval, daily schedules",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string",
                                        "required_error":"name is required",
                                        "required":true
                                    },

                                    "dosage":{
                                        "type":"string",
                                        "required_error":"dosage is required",
                                        "required": true
                                    },

                                    "daysInterval":{
                                        "type": "number",
                                        "required_error":"days interval is required",
                                        "required":true
                                    },


                                    "dailySchedule":{
                                        "type":"array",
                                        "items":{
                                            "type":"string",
                                            "required_error":"daily schedule is required",
                                            "required": true,
                                            "example": "08:30"
                                        }
                                    },

                                    "prescription":{
                                        "type":"string",
                                        "required_error":"prescription is required",
                                        "required": true
                                    },

                                    "message":{
                                        "type":"string",
                                        "required":false,
                                        "optional":true
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "201":{
                       "description":"Medication created"
                    },

                    "400":{
                        "description":"Unauthorized"
                    },

                    "401":{
                        "description":"Access token required"
                    },

                    "404":{
                        "description":"User not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            },

            "get":{
                "summary":"fetch all medications",
                "tags":["getAllMedications"],
                "description":"this route is used to fetch all the user medications",
                "responses":{
                    "200":{
                        "description":"success"
                    },

                    "400":{
                        "description":"unauthenticated user"
                    }, 

                   "401":{
                       "description":"Access token required"
                    },

                    "500":{
                        "description":"server error"
                    }
                    
                }
            }
        },


        "/api/v1/medications/{mdId}":{
            "patch":{
                "summary":"update medications route",
                "tags":["updateMedicationsRoute"],
                "parameters":[
                    {
                        "name":"medId",
                        "in":"path",
                        "required":true,
                        "description":"The ID of the medication to update",
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "requestBody":{
                    "description":"This route is used to update the medications route",

                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string",
                                        "optional":true
                                    },

                                    "dosage":{
                                        "type":"string",
                                        "optional":true
                                    },

                                    "daysInterval":{
                                        "type":"number"
                                    },

                                    "dailySchedule":{
                                        "type":"array",
                                        "items":{
                                            "type":"string",
                                            "required":true,
                                            "example": "08: 30pm"
                                        }
                                    },

                                    "prescription":{
                                        "type":"string",
                                        "optional":true
                                    },

                                    "message":{
                                        "type":"string",
                                        "optional":true
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"success"
                    },
                    "400":{
                        "description":"Bad request"
                    },

                    "401":{
                        "description":"Access token required"
                    },

                    "403":{
                        "description":"Unauthorized"
                    },

                    "404":{
                        "description":"Not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            },


            "get":{
                "summary":"Find Medication by the medication  ID",
                "tags":["getMedicationByMedicationIdRoute"],
                "produces":["application/json"],
                "parameters":[
                    {
                        "name": "medId",
                        "in": "path",
                        "required": true,
                        "type":"string",
                        "description": "The unique identifier of the medication."
  
                      }
                ],

                "responses":{
                    "200":{
                        "description":"Success"
                    },

                    "400":{
                        "description":"Bad Request"
                    },
                    "403":{
                        "description":"Access token refreshed"
                    },

                    "404":{
                        "description":"Medication not found"
                    },

                    "500":{
                        "description":"Server Error"
                    }
                }
            },

            "delete":{
                "summary":"Delet medication by medication ID",
                "tags":["deleteMedicationByMedicationId"],

                "description": "Deletes the medication resource identified by the given `medId` parameter.",
                "parameters":[
                    {
                        "name":"medId",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"string"
                        }
                    }
               ],

               "responses":{
                "200":{
                    "description":"Medication deleted successfully"
                },

                "400":{
                    "description":"Access token required"
                },

                "401":{
                    "description":"Unauthorized"
                },

                "403":{
                    "description":"Not authenticated user"
                },

                "404":{
                    "description":"Not found"
                },
                "500":{
                    "description":"server error"
                }
               }

             }
        },


        "/api/v1/notifications/add-medication":{
            "post":{
                "summary":"Add medication to a user",
                "tags":["addMedicationForAUser"],
                "parameters":[],
                "requestBody":{
                    "description":"This route is used to add a medication to a user",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "medId":{
                                        "type":"string",
                                        "description":"The ID of the medication to be added"
                                    },

                                    "startToday":{
                                        "type":"boolean",
                                        "description":"Determine whether notification should start today or not"
                                    }
                                },

                                "required":["medId"]
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"Success"
                    },

                    "400":{
                        "description":"Bad Request"
                    },

                    "401":{
                        "description":"Access token required"
                    },

                    "403":{
                        "description":"unauthenticated user"
                    },

                    "404":{
                        "description":"Medication not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }
            }
        },


        "/api/v1/notifications/subscribe":{
            "post":{
                "summary":"subscribe a notification to a user by the user ID and timezone",
                "tags":["subscribeNotificationRoute"],
                "requestBody":{
                    "description":"this route is used to subscribe a notification to a user by an authenticated user",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "newSubscription":{
                                        "type":"array",
                                        "items":{
                                            "type":"string",
                                            "required":true,
                                            "example": "08: 30pm"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },

                "responses":{
                    "200":{
                        "description":"User subscribed successful"
                    },
                    "400":{
                        "description":"subscriptio is required"
                    },
                    "401":{
                        "description":"Access token required"
                    },

                    "403":{
                        "description":"unauthenticated user"
                    },

                    "404":{
                        "description":"User Id and Timezonw not found"
                    },

                    "500":{
                        "description":"server error"
                    }
                }

               
               
               
            }
            
        } ,

        "/api/v1/notifications/send-notification": {
            "get": {
                "summary": "Get Medication Notifications",
                "description": "Sends medication reminders to a subscribed user based on the specified time.",
                "tags": ["getNotificationsRoute"],
                "parameters": [
                    {
                        "name": "time",
                        "in": "query",
                        "description": "Time in HH:mm format to fetch medications for notifications. Defaults to 00:00 if not provided.",
                        "required": false,
                        "schema": {
                        "type": "string",
                        "example": "09:30"
                        }
                    }
                ],

                "responses":{
                    "200":{
                        "description":"Notification sent successful"
                    },

                    "400":{
                        "description":"Bad Request"
                        
                    },

                    "401":{
                        "description":"Access token required"
                    },

                    "403":{
                        "description":"unauthenticated user"
                    },
                    "500":{
                        "description":"Server Error"
                    }
                }
        
            }
        },


        "/api/v1/notifications/get-schedule": {
            "get": {
                "summary": "Get Medication schedule Notifications",
                "description": "Sends medication reminders to a subscribed user based on the specified time.",
                "tags": ["getNotificationsRoute"],
                "parameters": [
                    {
                        "name": "time",
                        "in": "query",
                        "description": "Time in HH:mm format to fetch medications for notifications. Defaults to 00:00 if not provided.",
                        "required": false,
                        "schema": {
                        "type": "string",
                        "example": "09:30"
                        }
                    }
                ],

                "responses":{
                    "200":{
                        "description":"Notification sent successful"
                    },

                    "400":{
                        "description":"Bad Request"
                        
                    },

                    "401":{
                        "description":"Access token required"
                    },

                    "403":{
                        "description":"unauthenticated user"
                    },
                    "500":{
                        "description":"Server Error"
                    }
                }
        
            }
        }
        


    }


}